{
  "name": "clean-architecture-api",
  "version": "1.0.0",
  "description": "Node.js API using Typescript, TDD and Clean Architecture",
  "scripts": {
    "start:dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/server.ts",
    "check": "npm-check -s -u",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "author": "Flavio Brusamolin",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.4",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.23",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "eslint": "^7.4.0",
    "eslint-config-standard-with-typescript": "^16.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-commit-msg-linter": "^2.4.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "ts-jest": "^26.1.2",
    "ts-node-dev": "^1.0.0-pre.52",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.9",
    "validator": "^13.1.1"
  }
}
